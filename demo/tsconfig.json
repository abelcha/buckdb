{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "lib": ["ESNext", "DOM"],
    "moduleResolution": "bundler",
    "strict": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "allowImportingTsExtensions": true,
    "isolatedModules": false,
    "esModuleInterop": true,
    "noEmit": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "baseUrl": ".",
    "experimentalDecorators": true,
    "noUncheckedIndexedAccess": true,
    "paths": {
      "vscode/vscode/*": ["../../monaco-vscode-api/dist/main/vscode/src/*"],
      "vscode/*": ["../../monaco-vscode-api/dist/main/*"]
    },
    "typeRoots": [
      "./node_modules/@types",
      "../../node_modules/@types" // Also check root node_modules
    ],
    "types": ["bun-types"], // Add bun-types
    "skipLibCheck": true
  },
  "include": ["src", "vite.config.ts", "vite.netlify.config.ts", "update-local-dependencies.ts"]
}
